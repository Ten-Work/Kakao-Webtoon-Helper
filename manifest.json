{
  "manifest_version": 3,
  "name": "Kakao Webtoon Helper",
  "version": "1.0",
  "description": "檢查 Kakao Webtoon 的閱讀券資訊，升級後可獲取更多內容。",
  "permissions": ["storage", "tabs", "scripting"],
  "host_permissions": ["https://*.kakaowebtoon.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}